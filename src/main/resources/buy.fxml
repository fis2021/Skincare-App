<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane id="makeOrderFile" alignment="center" hgap="15" prefHeight="600" prefWidth="800" style="-fx-background-color: #D2B4DE;" styleClass="background" vgap="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.BuyController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" styleClass="title" text="     Place order" wrappingWidth="216.849609375" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
            <Font name="System Bold Italic" size="31.0" />
        </font>
    </Text>

    <Label styleClass="title, medium_label" text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="1">
      <font>
         <Font name="System Bold Italic" size="18.0" />
      </font></Label>

    <ChoiceBox id="name" fx:id="name" prefWidth="150.0" style="-fx-background-color: #D2B4DE; -fx-border-color: #4A235A; -fx-background-insets: 0; -fx-border-radius: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button id="orderButton" onAction="#handleMakeOrderButtonAction" style="-fx-background-insets: 0; -fx-background-radius: 20; -fx-background-color: #4A235A;" styleClass="medium_button" text="Place order and complete checkout" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font></Button>
    </HBox>
    <Button id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButtonAction" prefHeight="39.0" prefWidth="109.0" style="-fx-background-insets: 0; -fx-background-radius: 20; -fx-background-color: #4A235A;" styleClass="medium_button" text="Cancel" textFill="WHITE" GridPane.rowIndex="7">
        <font>
            <Font name="System Bold Italic" size="18.0" />
        </font></Button>
    
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
