<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #D2B4DE;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.CustomerController">
    <BorderPane prefHeight="252.0" prefWidth="600.0" style="-fx-background-color: #D2B4DE;">
        <left>
            <Button fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelpButtonAction" prefWidth="150.0" style="-fx-background-color: #4A235A; -fx-background-insets: 0; -fx-background-radius: 20;" text="Ask for help" textFill="WHITE" BorderPane.alignment="CENTER">
                <font>
                    <Font name="System Bold Italic" size="18.0" />
                </font>
            </Button>
        </left>
      <right>
            <Button fx:id="viewProductsButton" mnemonicParsing="false" onAction="#handleViewProductsButtonAction" prefHeight="39.0" prefWidth="197.0" style="-fx-background-color: #4A235A; -fx-background-insets: 0; -fx-background-radius: 20;" text="Search for products" textFill="WHITE" BorderPane.alignment="CENTER">
                <font>
                    <Font name="System Bold Italic" size="18.0" />
                </font>
            </Button>
      </right>
      <bottom>
         <Button fx:id="viewOrdersCButton" mnemonicParsing="false" onAction="#handleViewOrdersCButtonAction" prefHeight="39.0" prefWidth="158.0" style="-fx-background-color: #4A235A; -fx-background-insets: 0; -fx-background-radius: 20;" text="View Orders" textFill="WHITE" BorderPane.alignment="CENTER">
            <font>
               <Font name="System Bold Italic" size="18.0" />
            </font>
         </Button>
      </bottom>
      <center>
         <Button fx:id="faqButton" mnemonicParsing="false" onAction="#handlefaqButtonAction" prefHeight="39.0" prefWidth="124.0" style="-fx-background-color: #4A235A; -fx-background-insets: 0; -fx-background-radius: 20;" text="FAQ" textFill="WHITE" BorderPane.alignment="CENTER">
            <font>
               <Font name="System Bold Italic" size="18.0" />
            </font></Button>
      </center>
    </BorderPane>
    <HBox alignment="CENTER" prefHeight="0.0" prefWidth="600.0" style="-fx-spacing: 150;" />
    <HBox alignment="CENTER" prefHeight="232.0" prefWidth="600.0" style="-fx-spacing: 150; -fx-background-color: #D2B4DE;">
      <Button fx:id="pointsButton" mnemonicParsing="false" onAction="#handleViewPointsButtonAction" prefWidth="150.0" style="-fx-background-color: #4A235A; -fx-background-insets: 0; -fx-background-radius: 20;" text="FidelityPoints" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Button>
        <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#handleLogOutButtonAction" prefWidth="150.0" style="-fx-background-color: #4A235A; -fx-background-insets: 0; -fx-background-radius: 20;" text="Log out" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font>
        </Button>
    </HBox>


</VBox>
