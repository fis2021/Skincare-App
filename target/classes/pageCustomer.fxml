<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.CustomerController">
    <BorderPane prefHeight="250.0" prefWidth="600.0">
      <bottom>
         <SplitMenuButton mnemonicParsing="false" prefHeight="46.0" prefWidth="216.0" text="Search by skin-type" BorderPane.alignment="CENTER">
           <items>
             <MenuItem fx:id="drySkinButton" mnemonicParsing="false" onAction="#handleSearchforDrySkinButtonAction" text="Dry-Skin" />
             <MenuItem fx:id="oilySkinButton" mnemonicParsing="false" onAction="#handleSearchforOilySkinButtonAction" text="Oily-Skin" />
               <MenuItem fx:id="sensitiveSkinButton" mnemonicParsing="false" onAction="#handleSearchforSensitiveSkinButtonAction" text="Sensitive-Skin" />
           </items>
            <font>
               <Font size="18.0" />
            </font>
         </SplitMenuButton>
      </bottom>
    </BorderPane>
    <HBox alignment="CENTER" prefHeight="150.0" prefWidth="600.0" style="-fx-spacing: 150;">
      <children>
        <Button fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelpButtonAction" prefHeight="71.0" prefWidth="160.0" text="Ask for help">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
      </children></HBox>
    <HBox alignment="CENTER" prefHeight="150.0" prefWidth="600.0" style="-fx-spacing: 150;">
      <children>
           <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#handleLogOutButtonAction" prefHeight="49.0" prefWidth="159.0" text="Log out">
               <font>
                   <Font size="19.0" />
               </font>
           </Button>
      </children></HBox>

</VBox>
