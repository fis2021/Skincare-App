<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="20" prefHeight="425.0" prefWidth="600.0" style="-fx-background-color: #D2B4DE;" vgap="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.GiveAnswersController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <font>
            <Font name="System Bold Italic" size="18.0" />
        </font></Label>

    <TextField fx:id="idQ" style="-fx-background-color: #D2B4DE; -fx-border-color: #4A235A; -fx-border-insets: 0; -fx-border-radius: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font size="20.0" />
        </font></TextField>

    <Label text="Answer" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <font>
            <Font name="System Bold Italic" size="18.0" />
        </font></Label>

    <TextField fx:id="answer" style="-fx-background-color: #D2B4DE; -fx-border-color: #4A235A; -fx-border-insets: 0; -fx-border-radius: 20;" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font size="20.0" />
        </font></TextField>



    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button id="backButtonA" onAction="#handleBackButtonAAction" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #4A235A; -fx-background-radius: 20; -fx-background-insets: 0;" text="Back" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font></Button>
    </HBox>


    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button id="sendA" alignment="CENTER" contentDisplay="CENTER" onAction="#handleSendAButtonAction" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #4A235A; -fx-background-insets: 0; -fx-background-radius: 20;" text="Send" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font></Button>
    </HBox>
    <Text id="addAnswer" fx:id="addAnswer" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <columnConstraints>
        <ColumnConstraints maxWidth="136.6" minWidth="62.0" prefWidth="101.6" />
        <ColumnConstraints maxWidth="306.8" minWidth="233.0" prefWidth="268.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
